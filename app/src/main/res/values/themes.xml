<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelHeroes" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Splashscreen Theme. (No Action and Status Bar  -->
    <style name="Theme.MarvelHeroes.Splashscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <!--  Transparent Action Bar  -->
    <style name="Theme.MarvelHeroes.ActionBar.Transparent" parent="Theme.MarvelHeroes">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <!--  Style for Parent in Item Layout  -->
    <style name="ParentItemViewGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ParentItemViewGroup.Cardview">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:backgroundTint">@color/gray_darker</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <!--  Style for Characters Data Text  -->
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextContent.Name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>
    <style name="TextContent.Name.Grid">
        <item name="android:background">@color/gray_darker</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextContent.Role">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>
    <style name="TextContent.Detail">
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--  Style for Cardview Button  -->
    <style name="CardviewButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gray_dark</item>
    </style>

</resources>